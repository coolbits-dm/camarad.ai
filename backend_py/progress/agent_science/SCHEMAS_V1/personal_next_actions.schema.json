{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "personal_next_actions.schema.json",
  "title": "Personal Next Actions",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "agent",
    "policy_used",
    "why_deep",
    "summary",
    "actions"
  ],
  "properties": {
    "agent": {
      "type": "string",
      "const": "personal"
    },
    "policy_used": {
      "type": "string",
      "enum": ["auto", "eco", "deep"]
    },
    "why_deep": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "action",
          "priority",
          "owner",
          "estimated_time_minutes",
          "deadline_hint",
          "dependency_flags"
        ],
        "properties": {
          "action": {
            "type": "string",
            "minLength": 1,
            "maxLength": 280
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "owner": {
            "type": "string",
            "enum": ["user", "system", "other"]
          },
          "estimated_time_minutes": {
            "type": "integer",
            "minimum": 1,
            "maximum": 480
          },
          "deadline_hint": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
          },
          "dependency_flags": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 120
            },
            "maxItems": 6
          },
          "context_snippet": {
            "type": "string",
            "maxLength": 220
          }
        }
      }
    },
    "trace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "request_id": {
          "type": "string",
          "maxLength": 120
        },
        "tool_calls": {
          "type": "integer",
          "minimum": 0
        },
        "estimated_ct_cost": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "policy_used": {
            "const": "deep"
          }
        }
      },
      "then": {
        "properties": {
          "why_deep": {
            "type": "string",
            "minLength": 3
          }
        }
      },
      "else": {
        "properties": {
          "why_deep": {
            "type": ["string", "null"]
          }
        }
      }
    }
  ]
}
